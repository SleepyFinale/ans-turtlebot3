<?xml version="1.0" encoding="UTF-8" ?>
<!-- Fast DDS initial peers: use on ROBOT. One file for all robots (Blinky, Pinky, Inky, Clyde).
     Ports listed are for ROS_DOMAIN_ID 30,31,32,33 so the same file works with any robot.
     Set ROS_DOMAIN_ID and this profile via: source scripts/set_robot_env.sh <robot> [central_ip]
     1. Replace CENTRAL_IP below with your central PC's IP (hostname -I | awk '{print $1}' on central),
        or pass it when sourcing: source scripts/set_robot_env.sh pinky 192.168.50.108 -->
<dds>
  <profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <participant profile_name="initial_peers_robot" is_default_profile="true">
      <rtps>
        <builtin>
          <initialPeersList>
            <!-- Domain 30 (Blinky): 14910, 14912 -->
            <locator><udpv4><address>192.168.50.108</address><port>14910</port></udpv4></locator>
            <locator><udpv4><address>192.168.50.108</address><port>14912</port></udpv4></locator>
            <!-- Domain 31 (Pinky): 15160, 15162 -->
            <locator><udpv4><address>192.168.50.108</address><port>15160</port></udpv4></locator>
            <locator><udpv4><address>192.168.50.108</address><port>15162</port></udpv4></locator>
            <!-- Domain 32 (Inky): 15410, 15412 -->
            <locator><udpv4><address>192.168.50.108</address><port>15410</port></udpv4></locator>
            <locator><udpv4><address>192.168.50.108</address><port>15412</port></udpv4></locator>
            <!-- Domain 33 (Clyde): 15660, 15662 -->
            <locator><udpv4><address>192.168.50.108</address><port>15660</port></udpv4></locator>
            <locator><udpv4><address>192.168.50.108</address><port>15662</port></udpv4></locator>
          </initialPeersList>
        </builtin>
      </rtps>
    </participant>
  </profiles>
</dds>