<?xml version="1.0" encoding="UTF-8" ?>
<!-- Fast DDS initial peers: use on ROBOT so it discovers central PC via unicast.
     1. On central PC, get its IP: hostname -I | awk '{print $1}'
     2. Replace 192.168.50.100 below with that IP (same subnet as robot).
     3. On robot, before ros2 launch, use the REAL path to this file, e.g.:
        export FASTRTPS_DEFAULT_PROFILES_FILE="$HOME/turtlebot3_ws/scripts/fastdds_initial_peers_robot.xml"
        (Do not use the literal /path/to/... or Fast DDS will fail with "realpath failed".)
     Ports 14910, 14912 are for ROS_DOMAIN_ID=30 (Blinky). For Pinky (31) use 14960, 14962. -->
<dds>
  <profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <participant profile_name="initial_peers_robot" is_default_profile="true">
      <rtps>
        <builtin>
          <initialPeersList>
            <locator>
              <udpv4>
                <address>192.168.50.108</address>
                <port>14910</port>
              </udpv4>
            </locator>
            <locator>
              <udpv4>
                <address>192.168.50.108</address>
                <port>14912</port>
              </udpv4>
            </locator>
          </initialPeersList>
        </builtin>
      </rtps>
    </participant>
  </profiles>
</dds>